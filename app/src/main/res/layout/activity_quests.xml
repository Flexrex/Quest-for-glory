<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/levelText"
            android:text="@string/levelText"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/border_yellow"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false" />
        <TextView
            android:id="@+id/XPText"
            android:text="@string/XPText"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/border_yellow"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/greedText"
            android:gravity="center"
            android:text="@string/greedText"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/border_blue"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/inventoryText"
            android:gravity="center"
            android:text="@string/inventoryText"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/border_blue"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/skillsText"
            android:gravity="center"
            android:text="@string/skillsText"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/border_blue"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>


