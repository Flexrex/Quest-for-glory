<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level"
            android:text="@string/level"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/XP"
            android:text="@string/XP"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greedText"
            android:gravity="center"
            android:text="@string/greed"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="greed"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/inventoryText"
            android:gravity="center"
            android:text="@string/inventory"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="inventory"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/skillsText"
            android:gravity="center"
            android:text="@string/skills"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="skills"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quest_1"
            android:gravity="center"
            android:text="@string/quest_1"
            android:textSize="21sp"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/border_quest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/arrow_back"
            android:id="@+id/forestLevelBack"
            android:background="@drawable/border_the_forest"
            android:onClick="decreaseTheForestLevel"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/theForest"
            android:gravity="center"
            android:text="@string/the_forest"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:background="@drawable/border_the_forest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="true"
            android:onClick="theForest"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/arrow_forward"
            android:id="@+id/theForestLevelForward"
            android:background="@drawable/border_the_forest"
            android:onClick="increaseTheForestLevel"
            android:contentDescription="@string/forward" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theForestRewards"
            android:gravity="center"
            android:text="@string/the_forest_rewards"
            android:textSize="23sp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/border_the_forest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="true"
            android:onClick="theForest"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/arrow_back"
            android:id="@+id/mountainLevelBack"
            android:background="@drawable/border_the_mountain"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/theMountain"
            android:gravity="center"
            android:text="@string/the_mountain"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:background="@drawable/border_the_mountain"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/arrow_forward"
            android:id="@+id/mountainLevelForward"
            android:background="@drawable/border_the_mountain"
            android:contentDescription="@string/forward" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theMountainRewards"
            android:gravity="center"
            android:text="@string/the_mountain_rewards"
            android:textSize="23sp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/border_the_mountain"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/arrow_back"
            android:id="@+id/ruinLevelBack"
            android:background="@drawable/border_the_ruin"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/theRuin"
            android:gravity="center"
            android:text="@string/the_ruin"
            android:textSize="28sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_the_ruin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/arrow_forward"
            android:id="@+id/ruinLevelForward"
            android:background="@drawable/border_the_ruin"
            android:contentDescription="@string/forward" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theRuinRewards"
            android:gravity="center"
            android:text="@string/the_ruin_rewards"
            android:textSize="23sp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/border_the_ruin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gearText"
            android:gravity="center"
            android:text="@string/gear"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="gear"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/kingdomText"
            android:gravity="center"
            android:text="@string/kingdom"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="kingdom"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/questsText"
            android:gravity="center"
            android:text="@string/quests"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus_highlight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>