<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/levelText"
            android:text="@string/level_text"
            android:gravity="center"
            android:textSize="23dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/XPText"
            android:text="@string/XP_text"
            android:gravity="center"
            android:textSize="23dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greedText"
            android:gravity="center"
            android:text="@string/greed_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="greed"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/inventoryText"
            android:gravity="center"
            android:text="@string/inventory_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="inventory"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/skillsText"
            android:gravity="center"
            android:text="@string/skills_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus_highlight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:background="@drawable/border_the_forest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    app:srcCompat="@android:color/black"
                    android:id="@+id/strike_image"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="200sp"
                    android:layout_height="65sp"
                    android:text="@string/strike_text"
                    android:id="@+id/strike_info"
                    android:layout_marginTop="34dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:layout_alignTop="@+id/strike_image"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/strike_image" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:id="@+id/charge_info"
                android:layout_alignTop="@+id/charge_image"
                android:layout_marginTop="33dp"
                android:layout_marginStart="30dp"
                android:textSize="16sp"
                android:text="@string/charge_text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    app:srcCompat="@android:color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:id="@+id/leap_image" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    app:srcCompat="@android:color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:id="@+id/leap_image" />

                <TextView
                    android:layout_width="200sp"
                    android:layout_height="65sp"
                    android:id="@+id/charge_info"
                    android:layout_alignTop="@+id/charge_image"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:text="@string/charge_text"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    app:srcCompat="@android:color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:id="@+id/leap_image" />

                <TextView
                    android:layout_width="200sp"
                    android:layout_height="65sp"
                    android:id="@+id/charge_info"
                    android:layout_alignTop="@+id/charge_image"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:text="@string/charge_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    app:srcCompat="@android:color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:id="@+id/leap_image" />

                <TextView
                    android:layout_width="200sp"
                    android:layout_height="65sp"
                    android:id="@+id/charge_info"
                    android:layout_alignTop="@+id/charge_image"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:text="@string/charge_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gearText"
            android:gravity="center"
            android:text="@string/gear_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="gear"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/kingdomText"
            android:gravity="center"
            android:text="@string/kingdom_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="kingdom"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/questsText"
            android:gravity="center"
            android:text="@string/quests_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="quests"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>