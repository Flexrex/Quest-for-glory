<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/levelText"
            android:text="@string/level_text"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/XPText"
            android:text="@string/XP_text"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greedText"
            android:gravity="center"
            android:text="@string/greed_text"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="greed"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/inventoryText"
            android:gravity="center"
            android:text="@string/inventory_text"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="inventory"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/skillsText"
            android:gravity="center"
            android:text="@string/skills_text"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="skills"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/herbs"
            android:text=" Herbs: "
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:background="@drawable/border_the_forest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gold"
            android:text=" Gold: "
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/border_gold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alchemyText"
            android:gravity="center"
            android:text="Alchemy"
            android:textSize="35sp"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:background="@drawable/border_the_forest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:background="@drawable/border_health">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/alchemyHealthPotion">

            <TextView
                android:id="@+id/healthPotion"
                android:gravity="center"
                android:text="Health Potion"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/border_health"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="serif"
                android:typeface="normal"
                android:textAllCaps="false"
                android:clickable="false"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/healthPotionUpgradeCraft">

                <TextView
                    android:id="@+id/healthPotionUpgrade"
                    android:gravity="center"
                    android:text="Upgrade for\n50 Gold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_upgrade"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="upgradeHealthPotion" />

                <TextView
                    android:id="@+id/healthPotionCraft"
                    android:gravity="center"
                    android:text="Craft for\n 3 Herbs"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_the_forest"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="buyHealthPotionForHerbs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/healthPotionSellBuy">

                <TextView
                    android:id="@+id/healthPotionSell"
                    android:gravity="center"
                    android:text="Sell for\n9 Gold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="sellHealthPotionForGold" />

                <TextView
                    android:id="@+id/healthPotionBuy"
                    android:gravity="center"
                    android:text="Buy for\n12 Gold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="buyHealthPotionForGold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/alchemyDamagePotion">

                <TextView
                    android:id="@+id/damagePotion"
                    android:gravity="center"
                    android:text="Damage Potion Level 1\n+ 15 Damage for 3 turns (125)"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/border_offensive"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="alchemySell" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/damagePotionUpgradeSell">

                <TextView
                    android:id="@+id/damagePotionUpgrade"
                    android:gravity="center"
                    android:text="Upgrade for\n50 Gold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_upgrade"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/damagePotionCraft"
                    android:gravity="center"
                    android:text="Craft for\n 3 Herbs"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_the_forest"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="alchemySell" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/damagePotionSellBuy">

                <TextView
                    android:id="@+id/damagePotionSell"
                    android:gravity="center"
                    android:text="Sell for\n9 Gold"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/damagePotionBuy"
                    android:gravity="center"
                    android:text="Buy for\n12 Gold"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="alchemySell" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gearText"
            android:gravity="center"
            android:text="@string/gear_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="gear"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/kingdomText"
            android:gravity="center"
            android:text="@string/kingdom_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1"
            android:onClick="kingdom"/>

        <TextView
            android:id="@+id/questsText"
            android:gravity="center"
            android:text="@string/quests_text"
            android:textSize="23dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="quests"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>