<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/level"
            android:text="@string/level"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/XP"
            android:text="@string/XP"
            android:gravity="center"
            android:textSize="23sp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/border_level_xp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greedText"
            android:gravity="center"
            android:text="@string/greed"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="greed"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/inventoryText"
            android:gravity="center"
            android:text="@string/inventory"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="inventory"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/skillsText"
            android:gravity="center"
            android:text="@string/skills"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="skills"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/herbs"
            android:text="@string/herbs"
            android:textSize="23sp"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:background="@drawable/border_the_forest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/gold"
            android:text="@string/gold"
            android:textSize="23sp"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:background="@drawable/border_gold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/alchemyText"
            android:gravity="center"
            android:text="@string/alchemy"
            android:textSize="35sp"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:background="@drawable/border_the_forest"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:background="@drawable/border_the_forest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/alchemyHealthPotion">

            <TextView
                android:id="@+id/healthPotion"
                android:gravity="center"
                android:text="@string/health_potion_info"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/border_health"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="serif"
                android:typeface="normal"
                android:textAllCaps="false"
                android:clickable="false"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/healthPotionUpgradeCraft">

                <TextView
                    android:id="@+id/healthPotionUpgrade"
                    android:gravity="center"
                    android:text="@string/upgrade"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_upgrade"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="upgradeHealthPotion" />

                <TextView
                    android:id="@+id/healthPotionCraft"
                    android:gravity="center"
                    android:text="@string/craft"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_the_forest"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="buyHealthPotionForHerbs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/healthPotionSellBuy">

                <TextView
                    android:id="@+id/healthPotionSell"
                    android:gravity="center"
                    android:text="@string/sell"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="sellHealthPotionForGold" />

                <TextView
                    android:id="@+id/healthPotionBuy"
                    android:gravity="center"
                    android:text="@string/buy"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1"
                    android:onClick="buyHealthPotionForGold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/alchemyDamagePotion">

                <TextView
                    android:id="@+id/damagePotion"
                    android:gravity="center"
                    android:text="@string/damage_potion_info"
                    android:textSize="25sp"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:background="@drawable/border_offensive"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/damagePotionUpgradeSell">

                <TextView
                    android:id="@+id/damagePotionUpgrade"
                    android:gravity="center"
                    android:text="@string/upgrade"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_upgrade"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/damagePotionCraft"
                    android:gravity="center"
                    android:text="@string/craft"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_the_forest"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/damagePotionSellBuy">

                <TextView
                    android:id="@+id/damagePotionSell"
                    android:gravity="center"
                    android:text="@string/sell"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/damagePotionBuy"
                    android:gravity="center"
                    android:text="@string/buy"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_gold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="serif"
                    android:typeface="normal"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gearText"
            android:gravity="center"
            android:text="@string/gear"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="gear"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/kingdomText"
            android:gravity="center"
            android:text="@string/kingdom"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:layout_weight="1"
            android:onClick="kingdom"/>

        <TextView
            android:id="@+id/questsText"
            android:gravity="center"
            android:text="@string/quests"
            android:textSize="23sp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_menus"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="serif"
            android:typeface="normal"
            android:textAllCaps="false"
            android:clickable="false"
            android:onClick="quests"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>